from statistics import harmonic_mean


def formula_media():
    print ("SELECIONADO: Media Aritimetica.\n")
    numerosdaaritimetica =  []
    qtdDenumeros = 3
    for i in range (qtdDenumeros):
        numeroinserido= float(input("Insira um numero: "))
        numerosdaaritimetica.append (numeroinserido)
        soma1= sum(numerosdaaritimetica)
        aritimeticaresult= soma1 / qtdDenumeros

    print (numerosdaaritimetica)
    print (soma1)
    print ("Resultado da Media Aritimetica: %.2f" %(aritimeticaresult))

def formlaMediaPonderada ():
    print ("SELECIONADO: Media Ponderada.\n")
    qtdDenumeros = 3
    numeropeso5= float(input("Insira o numero com peso 5: ")) 
    numeropeso3= float(input("Insira o numero com peso 3: "))
    numeropeso2= float(input("Insira o numero com peso 2: "))
    numerosparasoma= (numeropeso5 * 5), (numeropeso3 * 3), (numeropeso2 * 2)

    ponderadaresult = (sum(numerosparasoma)) / qtdDenumeros
    print ("Resultado da Media Ponderada: %.2f" %(ponderadaresult))

def formulaMedida ():
    print ("SELECIONADO: Calculo de Media Harmonica.\n")
    nmDaHarmonica= []
    qtdDeNumeros= 3
    harmonicaresult = float
    for i in range (qtdDeNumeros):
        numeroInserido= float(input("Insira um numero: "))
        nmDaHarmonica.append (numeroInserido)
        soma= sum(nmDaHarmonica)
        harmonicaresult = (harmonic_mean(nmDaHarmonica))

    print ("Resultado da media harmonica: %.2f" %(harmonicaresult))


def menuDeSelecao ():
    media= 'h' "H"
    mediaponderada= 'a' "A"
    medida= 'x' "X"
    print ("||| SELECIONE A OPÇÃO |||")
    print ("Para Media aritimetica digite (H)")
    print ("Para Media ponderada digite (A)")
    print ("Para Media harmonica digite (X)")
    escolha= str(input("Insira sua opção: "))
    
    if escolha in media:
        print ("fomula media aritimetica")
        formula_media ()
    elif escolha in mediaponderada:
        print ("media ponderada")
        formlaMediaPonderada ()
    elif escolha in medida:
        print ("medida")
        formulaMedida ()

nomeDoUsuario = str(input("Insira seu nome: "))

print ("||| BEM VINDO {} ||| " .format(nomeDoUsuario))

while True:
    menuDeSelecao ()
    
    print ("||| DESEJA CONTINUAR?||| \n\n")
    print ("||| PARA CONTINUAR DIGITE (S) ||| PARA SAIR DIGITE (N) |||")
    
    seguir = True
    while True:
        continuar= str(input("INSIRA SUA ESCOLHA: "))
        if continuar == 's':
            break
        elif continuar == 'n':
            print ("Obrigado por utlizar nosso script\n")
            seguir = False
            break
        else: 
            print ("!!! OPCAO INVALIDA !!!")
            continue
    if seguir == False:
        break
