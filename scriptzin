from statistics import harmonic_mean
import os


def formulaaritimetica():
    print("SELECIONADO: Media Aritimetica.\n")
    numerosdaaritimetica = []
    qtddenumeros: int = 3
    aritimeticaresult = 0
    for i in range(qtddenumeros):
        numeroinserido = float(input("Insira um numero: "))
        numerosdaaritimetica.append(numeroinserido)
        soma1 = sum(numerosdaaritimetica)
        aritimeticaresult = soma1 / qtddenumeros

    print("Numeros Digitados", numerosdaaritimetica)
    print("||| Resultado da Media Aritimetica: %.2f |||" % aritimeticaresult)
    return


def formulamediaponderada():
    print("SELECIONADO: Media Ponderada.\n")
    qtddenumeros = 3
    numeropeso5 = float(input("Insira o numero com peso 5: "))
    numeropeso3 = float(input("Insira o numero com peso 3: "))
    numeropeso2 = float(input("Insira o numero com peso 2: "))
    numerosparasoma = (numeropeso5 * 5), (numeropeso3 * 3), (numeropeso2 * 2)
    ponderadaresult = (sum(numerosparasoma)) / qtddenumeros
    print("Resultado da Media Ponderada: %.2f" % ponderadaresult)
    return


def formulaharmonica():
    print("SELECIONADO: Calculo de Media Harmonica.\n")
    nmdaharmonica = []
    qtddenumeros = 3
    harmonicaresult = float
    for i in range(qtddenumeros):
        numeroinserido = float(input("Insira um numero: "))
        nmdaharmonica.append(numeroinserido)
        harmonicaresult = (harmonic_mean(nmdaharmonica))

    print("Resultado da media harmonica: %.2f" % harmonicaresult)
    return


def menudeselecao():
    print("||| MENU DE SELEÇÃO |||\n||| OPÇÕES: ")
    print("Media aritimetica: digite (A)")
    print("Media ponderada: digite (P)")
    print("Media harmonica: digite (H)")
    artimetica = "a" "A"
    ponderada = "p" "P"
    harmonica = "h" "H"
    while True:
        escolha = str(input("Insira sua opção: "))

        if escolha in artimetica:
            formulaaritimetica()
            break
        elif escolha in ponderada:
            formulamediaponderada()
            break
        elif escolha in harmonica:
            formulaharmonica()
            break
        else:
            print("||| Opção Invalida!!! |||")
            continue


def instrucoes():
    print("LEIA COM ATENÇÃO")
    print("USAR PONTO (.) NO LUGAR DA VIRGULA\nEXEMPLO: 1,0 = ERRO ||| 1.0 = prosseguir")
    input("Precione a tecla |ENTER ↵| para continuar\n\n\n")


nomeDoUsuario = str(input("Insira seu nome: "))
nomeDoUsuariocxplus = nomeDoUsuario.upper()
print("||| BEM VINDO {} ||| ".format(nomeDoUsuariocxplus))

seguir = 1
while True:

    escolha1 = "s", 'S'
    escolha2 = "n", "N"
    msg1 = 1
    if msg1 == 1:
        instrucoes()
        msg1 += 1
    menudeselecao()

    print("||| DESEJA CONTINUAR?||| \n\n")
    print("||| PARA CONTINUAR DIGITE (S) ||| PARA SAIR DIGITE (N) |||")

    while True:
        continuar = str(input("INSIRA SUA ESCOLHA: "))
        if continuar in escolha1:
            print("\n" * os.get_terminal_size().lines)
            break

        elif continuar in escolha2:
            print("Obrigado por utlizar esse script")
            seguir += 1
            break
        else:
            print("!!! OPCAO INVALIDA !!!")
            continue

    if seguir > 1:
        break

print("\n\n\n\n\n Desenvolvedor: Arthur Alves Rufino Santana \n email: temparthur87@gmail.com")
